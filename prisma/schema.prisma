generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Connection {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    userId    String    @unique
    duration  Int
    Section   Section[]
    Pass      Pass[]
}

// a connection has multiple sections
model Section {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    connection   Connection? @relation(fields: [connectionId], references: [id])
    connectionId Int?

    departureTime DateTime
    arrivalTime   DateTime
    destination   String

    trainOperator String
    trainNumber   String
    trainCategory String

    departureStation            String
    departureStationCoordinateX Float
    departureStationCoordinateY Float

    arrivalStation            String
    arrivalStationCoordinateX Float
    arrivalStationCoordinateY Float
}

model Pass {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    section   Connection? @relation(fields: [sectionId], references: [id])
    sectionId Int?

    arrivalTime   DateTime
    departureTime DateTime

    stationName        String
    stationCoordinateX Float
    stationCoordinateY Float
}
