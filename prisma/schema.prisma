generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Settings {
    userId   String @unique
    language String
}

model Connection {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String
    duration  Int

    sections Section[]
}

// a connection has multiple sections
model Section {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    connection   Connection? @relation(fields: [connectionId], references: [id], onDelete: Cascade)
    connectionId Int?

    departureTime DateTime
    arrivalTime   DateTime
    destination   String

    trainOperator String
    trainNumber   String
    trainCategory String

    departureStation            String
    departureStationCoordinateX Float
    departureStationCoordinateY Float

    arrivalStation            String
    arrivalStationCoordinateX Float
    arrivalStationCoordinateY Float
    passes                    Pass[]
}

model Pass {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    section   Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
    sectionId Int?

    arrivalTime   DateTime
    departureTime DateTime

    stationName        String
    stationCoordinateX Float
    stationCoordinateY Float
}
